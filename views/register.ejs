<%- include('./partials/sides-bar.ejs') %>

<main>
  <h1>Welcome to Happy Penpal !</h1>
  <h2>Actually, there are XXX users connected to our website</h2>

  <h3>Create Your Account</h3>
  <form class="form" method="POST" action="/register">
    <div class="form-group">
      <input type="text" placeholder="Votre pseudo" name="username" />
    </div>

    <div class="form-group">
      <input type="email" placeholder="Email Address" name="email" />
    </div>
    <div class="form-group">
      <input type="password" placeholder="Password" name="password" />
    </div>
    <div class="form-group">
      <input type="password" placeholder="Confirm Password" name="passwordConfirm" />
    </div>
    <input type="submit" class="form-button" value="Register" />
  </form>
  <p>Already have an account? <a href="/">Sign In</a></p>
  <img class="friends-img" src="/images/friends.svg" alt="des amis de dos" />
</main>

